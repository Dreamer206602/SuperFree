<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zchx.lb.superfree.ui.ui.activity.RegisterActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/item_topbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_input_phonenumber"
            android:drawablePadding="20px"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号码"
            android:inputType="phone"
            android:padding="20px"
            android:background="@null"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="10px"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_input_password"
                android:drawablePadding="20px"
                android:gravity="center_vertical"
                android:hint="请设置登录密码"
                android:inputType="textPassword"
                android:padding="20px"
                android:background="@null"
                />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10px"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:drawableLeft="@mipmap/icon_input_password"
            android:drawablePadding="20px"
            android:background="@null"
            android:padding="20px"
            android:gravity="center_vertical"
            android:hint="请确认登录密码"
            android:inputType="textPassword"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">
        <com.zchx.lb.superfree.ui.ui.widget.autoFitTextView.AutofitTextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="邀请码(选填)"
            android:padding="20px"
            android:textColor="@color/black"
            android:textSize="30px"/>

        <!-- 邀请人电话-->
        <EditText
            android:id="@+id/tv_recPersonMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_toEndOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:background="@null"
            android:padding="20px"
            android:hint="请输入邀请人的手机号码"
            android:inputType="number"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        >
        <TextView
            android:id="@+id/tv_agree_superFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px"
            android:padding="5px"
            android:text="同意超有利"/>

        <!-- 使用协议-->
        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_agree_superFree"
            android:layout_toEndOf="@+id/tv_agree_superFree"
            android:layout_toRightOf="@+id/tv_agree_superFree"
            android:text="使用协议"
            android:padding="5px"
            android:textColor="@color/def_pointer_color"/>

        <TextView
            android:id="@+id/tv_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_protocol"
            android:layout_toEndOf="@+id/tv_protocol"
            android:layout_toRightOf="@+id/tv_protocol"
            android:padding="5px"
            android:text="及"/>

        <TextView
            android:id="@+id/tv_Privacy_Clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_and"
            android:layout_toEndOf="@+id/tv_and"
            android:layout_toRightOf="@+id/tv_and"
            android:text="隐私条款"
            android:padding="5px"
            android:textColor="@color/def_pointer_color"/>

    </RelativeLayout>


    <!-- 点击的按钮-->
    <com.zchx.lb.superfree.ui.ui.widget.circleImage.RoundImageView
        android:layout_width="500px"
        android:layout_height="80px"
        app:borderRadius="50px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@mipmap/next"
        android:id="@+id/tv_click_next"
        app:type="round"/>



</LinearLayout>
