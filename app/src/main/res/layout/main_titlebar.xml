<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
                android:background="@color/def_pointer_color"
    >
    <!--android:background="@drawable/titlebar_bg"-->
    <TextView
        android:id="@+id/titlebar_text_exittip"
        android:textSize="19sp"
        android:textColor="@color/def_pointer_color"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_text_title"
        android:textSize="19sp"
        android:textColor="@color/def_pointer_color"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxEms="8"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/titlebar_img_back"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="false"
        android:src="@mipmap/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/titlebar_img_menu"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="false"
        />

</RelativeLayout>