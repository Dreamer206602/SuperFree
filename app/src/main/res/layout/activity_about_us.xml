<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zchx.lb.superfree.ui.ui.activity.AboutUsActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/item_topbar"
        />

    <ImageView
        android:id="@+id/img"
        android:src="@mipmap/iconmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <com.zchx.lb.superfree.ui.ui.widget.autoFitTextView.AutofitTextView
        android:layout_marginTop="15px"
        android:textSize="18sp"
        app:minTextSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.1.0"
        android:id="@+id/textView7"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/relative_welcome"
        android:layout_below="@id/textView7"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_welcome"
            android:padding="30px"
            android:textSize="18sp"
            android:text="欢迎页"
            android:drawableRight="@mipmap/right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_web"
        android:layout_marginTop="2px"
        android:layout_below="@id/relative_welcome"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="网站"
            android:padding="30px"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.chaoyouli.com"
            android:padding="30px"
            android:textSize="18sp"
            android:textColor="@color/def_pointer_color"
            android:gravity="center"
            android:id="@+id/textView16"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>





</RelativeLayout>
